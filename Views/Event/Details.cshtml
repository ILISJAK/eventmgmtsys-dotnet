@model EventManagementSystem.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Model.EventName
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Organizer
        </dt>
        <dd class="col-sm-10">
            @Model.Organizer
        </dd>
    </dl>
</div>

<div>
    <h4>Attendees</h4>
    <hr />
    @if (Model.Attendees.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attendee in Model.Attendees)
                {
                    <tr>
                        <td>@attendee.Name</td>
                        <td>@attendee.Email</td>
                        <td>@attendee.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No attendees registered for this event.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
