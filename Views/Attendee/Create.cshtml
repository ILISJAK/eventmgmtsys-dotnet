@model EventManagementSystem.ViewModels.AttendeeViewModel

@{
    ViewData["Title"] = "Create Attendee";
}

<h1>Create Attendee</h1>

<h4>Attendee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="attendeeForm" asp-action="Create">
            <partial name="_AttendeeForm" model="Model" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('attendeeForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the form from submitting immediately
            var formHtml = document.getElementById('attendeeForm').innerHTML;
            console.log("Form HTML before submission:", formHtml);

            // Log each input's value
            var inputs = document.querySelectorAll('#attendeeForm input, #attendeeForm select');
            inputs.forEach(function (input) {
                console.log(input.name + ": " + input.value);
            });

            // Submit the form after logging
            this.submit();
        });
    </script>
}
