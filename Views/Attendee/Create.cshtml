@model EventManagementSystem.ViewModels.AttendeeViewModel

@{
    ViewData["Title"] = "Create Attendee";
}

<h1>Create Attendee</h1>

<h4>Attendee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Attendee.Name" class="control-label"></label>
                <input asp-for="Attendee.Name" class="form-control" />
                <span asp-validation-for="Attendee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendee.Email" class="control-label"></label>
                <input asp-for="Attendee.Email" class="form-control" />
                <span asp-validation-for="Attendee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendee.PhoneNumber" class="control-label"></label>
                <input asp-for="Attendee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Attendee.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendee.EventId" class="control-label"></label>
                <select asp-for="Attendee.EventId" class="form-control" asp-items="@(Model.Events != null && Model.Events.Any() ? new SelectList(Model.Events, "Id", "EventName") : Enumerable.Empty<SelectListItem>())"></select>
                <span asp-validation-for="Attendee.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
