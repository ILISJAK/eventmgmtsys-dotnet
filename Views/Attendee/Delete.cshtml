@model EventManagementSystem.Models.Attendee

@{
    ViewData["Title"] = "Delete Attendee";
}

<div class="container mt-5">
    <h2 class="text-center">Delete Attendee</h2>

    <h3>Are you sure you want to delete this attendee?</h3>
    <div>
        <h4>@Model.Name</h4>
        <p>
            <strong>Email:</strong> @Model.Email<br />
            <strong>Phone:</strong> @Model.PhoneNumber<br />
            <strong>Event:</strong> @Model.Event.EventName
        </p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
